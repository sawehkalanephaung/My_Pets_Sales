@model List<Pet>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h2>Daily Sales Summary</h2>
            <table class="table table-striped text-black">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Animal</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model)
                    {
                        <tr>
                            <td>@pet.Date</td>
                            <td>@pet.Animal</td>
                            <td>@pet.Price.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
