@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Render Daily Sales -->
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12 mb-4 col-lg-6 mt-lg-0 mt-4">
            <h2>Daily Sales Summary</h2>
            <table class="table table-striped text-black">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Animal</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model.DailySales)
                    {
                        <tr>
                            <td>@pet.Date</td>
                            <td>@pet.Animal</td>
                            <td>@pet.Price.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Render Weekly Sales -->
        <div class="col-12 mb-4 col-lg-6 mt-lg-0 mt-4">
            <h2>Weekly Sales Summary</h2>
            <table class="table table-striped text-black">
                <thead>
                    <tr>
                        <th>Animal</th>
                        @foreach (var category in Model.WeeklySales.Categories)
                        {
                            <th>@category</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var series in Model.WeeklySales.Series)
                    {
                        <tr>
                            <td>@series.Name</td>
                            @foreach (var data in series.Data)
                            {
                                <td>@data.ToString("N2")</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
