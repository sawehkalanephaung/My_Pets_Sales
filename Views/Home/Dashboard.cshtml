@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Daily Sales Section -->
        <div class="col-12 mb-4 col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    Daily Sales
                </div>
                <div class="card-body">
                    <!-- Add your daily sales content here -->
                    <p>Daily sales data will be displayed here.</p>
                </div>
            </div>
        </div>

        <!-- Weekly Sales Section -->
        <div class="col-12 col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    Weekly Sales
                </div>
                <div class="card-body">
                    <!-- Add your weekly sales content here -->
                    <p>Weekly sales data will be displayed here.</p>
                </div>
            </div>
        </div>
    </div>
</div>